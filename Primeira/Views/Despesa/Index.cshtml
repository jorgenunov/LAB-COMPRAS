@model List<Primeira.Models.Despesa>
@{
    ViewBag.TituloPagina = "Depesas";
}

<h2><strong>Despesas</strong></h2>

@if (Model.Count == 0)
{
    <h2>Sem depesas as apresentar...</h2>
    <div>
        <a asp-action="NovaDespesa" class="btn btn-success btn-lg">
            <span class="glyphicon glyphicon-plus"> Despesa</span>
        </a>
    </div>
}
else
{
    <table class="table table-bordered well">
        <tr>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Valor</th>
            <th>Categoria</th>
            <th>Pago</th>
        </tr>
        @foreach (Primeira.Models.Despesa d in Model)
        {
            <tr>
                <td>@d.NomeDespesa</td>
                <td>@d.Quantidade</td>
                <td>@d.Valor</td>
                <td>@d.Categoria</td>
                <td>
                    @if (d.Pago == true)
                    {
                        @:Sim
                    }
                    else
                    {
                        @:Não

                    }
            </td>
        </tr>
    }
    </table>
    <div class="col-md-6 text-center">
        <a asp-action="LimparDespesas" class="btn btn-danger btn-lg">
            <span class="glyphicon glyphicon-trash"></span> Limpar Dados
        </a>
    </div>
    <div class="col-md-6 text-center">
        <a asp-action="NovaDespesa" class="btn btn-success btn-lg">
            <span class="glyphicon glyphicon-plus"> Despesa</span>
        </a>
    </div>

}



