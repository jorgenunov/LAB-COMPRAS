@model Despesa



@{ 
    ViewBag.TituloPagina = "Despesa Confirmada";
}

<h2> <strong>Despesa Confirmada</strong></h2>




<div class="row">
    <div class="col-md-8">
    <p><strong>Nome: </strong>@Model.NomeDespesa</p>
    <p><strong>Quantidade: </strong>@Model.Quantidade</p>
    <p><strong>Valor: </strong>@Model.Valor</p>
    <p><strong>Categoria: </strong>@Model.Categoria</p>
    <p>
        <strong>Pago: </strong>
        @if (Model.Pago == true)
        {
            @:Sim
        }
        else
        {
            @:Não

        }
    </p>
    </div>
</div>


<p>
    <a asp-controller="Despesa" asp-action="NovaDespesa" class="btn btn-success btn-lg">
            <span class="glyphicon glyphicon-plus"></span> Nova Despesa</a>
</p>

